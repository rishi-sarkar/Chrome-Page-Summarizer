{
    "manifest_version": 3,
    "name": "Page Summarizer",
    "version": "1.0",
    "description": "Summarizes the content of the current page.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  